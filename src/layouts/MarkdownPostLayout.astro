---
import BaseLayout from './BaseLayout.astro';
const { frontmatter, readTime } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <a href="/blog" class="back-link">← Blog Home</a>
  
  <div class="pub-date">
    {frontmatter.pubDate.toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric', 
      timeZone: 'UTC'})}
  </div>

  <div class="post-author">
    by {frontmatter.author}
  </div>

  <div class="post-read-time">
    {readTime} minute read
  </div>

  <img src={frontmatter.image.url} class="blog-pic" width="100" 
    alt={frontmatter.image.alt} />
    
  <div class="tags">
    {frontmatter.tags.map((tag: string) => (
      <a href={`/blog?tag=${tag}`} class="tag" role="button">
      {tag}
     </a>
    ))}
  </div>

  <slot />
  <a href="/blog" class="back-link">← Blog Home</a>
</BaseLayout>
