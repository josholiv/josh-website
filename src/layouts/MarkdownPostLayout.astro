---
import { User } from "lucide-preact";

import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>

  <div class="wave-container">
    <div class="wave wave-small"></div>
    <div class="wave wave-big"></div>
  </div>

  <div style="margin-bottom: 2rem">
    <span class="pub-date">
      {frontmatter.pubDate.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric', 
        timeZone: 'UTC'})}
    </span>

    <span class="post-author icon-container-inline">| <User size={"1.2rem"} style={{color: "var(--neutral-500)"}} />&nbsp;{frontmatter.author} | </span>

    <span class="post-read-time">
      {frontmatter.readTime} minute read
    </span>
  </div>

  <!-- <img src={frontmatter.image.url} class="blog-pic" width="100" 
    alt={frontmatter.image.alt} /> -->

  <div style="margin-bottom: 2rem" class="tags">
    {frontmatter.tags.map((tag: string) => (
      <a href={`/blog?tag=${tag}`} class="tag" role="button">
      #{tag}
     </a>
    ))}
  </div>

<hr>

  <slot />
</BaseLayout>
