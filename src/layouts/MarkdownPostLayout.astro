---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>

  <div style="margin-bottom: 1em">
    <span class="pub-date">
      {frontmatter.pubDate.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric', 
        timeZone: 'UTC'})}
    </span>

    <span class="post-author">| by {frontmatter.author} | </span>

    <span class="post-read-time">
      {frontmatter.readTime} minute read
    </span>
  </div>

  <img src={frontmatter.image.url} class="blog-pic" width="100" 
    alt={frontmatter.image.alt} />

  <div class="tags">
    {frontmatter.tags.map((tag: string) => (
      <a href={`/blog?tag=${tag}`} class="tag" role="button">
      #{tag}
     </a>
    ))}
  </div>

  <slot />
</BaseLayout>
