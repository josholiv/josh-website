---
import Social from './social.astro';
import { Image } from 'astro:assets';
import joshHeadshot from '../assets/josh-headshot-cropped.jpg';
---

<style>
  footer {
    display: flex;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    flex-direction: column;
    margin-top: 2rem;
    background-color: #f0f0f0;
    padding-top: 2rem;
    padding-bottom: 1rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .footer-inner {
      max-width: 90ch; /* match main page content width */
      margin: 0 auto;   /* center it horizontally */
    }

  .footer-top {
    display: flex; /* side-by-side layout for pic + text */
    align-items: center; /* vertically center content */
    padding: 1rem;
  }

  .profile-pic {
    margin-right: 1rem;
    width: 80px;
    height: auto;
    border-radius: 5px;
  }

  .footer-text {
    flex: 1; /* takes up remaining space */
  }

  .social-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding: 0 1rem 1rem;
  }

  @media (max-width: 600px) {
    .footer-top {
      flex-direction: column;
      align-items: flex-start;
    }
    .profile-pic {
      margin-right: 0;
      margin-bottom: 1rem;
    }
  }
</style>

<footer>
  <div class="footer-inner">
    <div class="footer-top">
      <Image src={joshHeadshot} alt="Josh Olivier" class="profile-pic" />
      <div class="footer-text">
        <div><strong>Hi, I'm Josh Olivier!</strong></div>
        <div>I'm a research assistant interested in memory, aging, and brain imaging.</div>
        <i>Find me elsewhere on the web:</i>
      </div>
    </div>

    <div class="social-container">
      <Social platform="bsky.app" username="profile/josholivier.bsky.social" displayName="Bluesky"/>
      <Social platform="linkedin.com" username="in/joshua-olivier/" displayName="LinkedIn"/>
      <Social platform="github.com" username="josholiv" displayName="GitHub" />
      <Social platform="thingiverse.com" username="josholiv" displayName="Thingiverse" />
      <Social platform="orcid.org/" username="0009-0002-3696-5552" displayName="ORCiD"/>
      <Social platform="scholar.google.com" username="citations?view_op=list_works&hl=en&hl=en&user=pXjS6H0AAAAJ" displayName="Google Scholar"/>
    </div>
  </div>
</footer>
