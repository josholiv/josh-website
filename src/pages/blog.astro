---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogSorter from "../components/BlogSorter.jsx"; // Import .jsx file

const pageTitle = "Blog";
const allPosts = await getCollection("blog");
---

<BaseLayout pageTitle={pageTitle} shouldCenterTitle={false}>
   <BlogSorter posts={allPosts} client:load /> {/* Pass all posts to BlogSorter.jsx */}
</BaseLayout>
